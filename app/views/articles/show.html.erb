<div class="container">
  <div id="article">
    <ul class="breadcrumbs">
      <li><a href="/articles">Articles</a></li>
      <li><%= link_to @article.title, @article %></li>
    </ul>
    <div class="row">
      <div class="seven columns">
        <div class="content">
          <h1><%= @article.title %></h1>
          <%= @article.content.html_safe %>
        </div>
      </div>

      <div class="five columns">
        <img src="http://placehold.it/400x500" />
      </div>
    </div>
  </div>
</div>
